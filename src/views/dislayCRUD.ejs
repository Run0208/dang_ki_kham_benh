<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dislay CRUD</title>
    <style>
      table,
      th,
      td {
        border: 1px solid rgba(0, 0, 0, 0.596);
        border-collapse: collapse;
      }
      a {
        display: inline-block;
        text-decoration: none;
        outline: none;
        border: none;
        font-weight: bold;
        cursor: pointer;
        padding: 5px 20px;
      }
      .btn-edit {
        background: orange;
      }
      .btn-delete {
        background: red;
      }
      a:hover {
        color: white;
      }
    </style>
  </head>
  <body>
    Dislay CRUD
    <table style="width: 100%">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>
      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%=dataTable[i].id %>"
            class="btn btn-edit"
            type="button"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%=dataTable[i].id %>"
            class="btn-delete"
            type="button"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
